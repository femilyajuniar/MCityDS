<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azhar.deliserdang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MCity Deli Serdang"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.azhar.deliserdang.activities.PrayPlaceActivity" />
        <activity android:name="com.azhar.deliserdang.activities.DetailWisataActivity" />
        <activity android:name="com.azhar.deliserdang.activities.WisataActivity" />
        <activity android:name="com.azhar.deliserdang.activities.DetailKulinerActivity" />
        <activity android:name="com.azhar.deliserdang.activities.KulinerActivity" />
        <activity android:name="com.azhar.deliserdang.activities.DetailHotelActivity" />
        <activity android:name="com.azhar.deliserdang.activities.HotelActivity" />
        <activity android:name="com.azhar.deliserdang.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="Google Maps API KEY" />
    </application>

</manifest>
